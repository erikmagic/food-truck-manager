

import java.io.File;

import java.io.FileNotFoundException;
import java.io.PrintStream;

public class Logger {
	
	static PrintStream writer = System.out;
	private final  long initialTime = System.currentTimeMillis();
	private  long timestamp;
	
	public  void log(String message)
	{
		// prints the current time
		timestamp = (System.currentTimeMillis() - initialTime) ;
		
		writer.println(message);
		//writer.println("\r");
	}
	
	
	public  void setLogWriter(String filename) throws FileNotFoundException
	{
		writer = new PrintStream(new File(filename));
		
	}


}